{
  "compilerOptions": {
    "outDir": "./build/",
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
    "module": "es2015",
    "strictNullChecks": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "lib": [
      "DOM",
      "es2015",
      "es2016",
      "es2017"
    ]
  },
  "include": [
    "./src/app/**/*",
    "./src/@types/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*-test.js",
    "**/*.less"
  ]
}